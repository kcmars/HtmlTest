@charset "utf-8";
/* CSS Document */
/*联系我们界面样式*/
.mainbody{position:relative;width: 100%;}
.mainbody .bannerImg{width:100%;}

/*清风事件内容样式*/
.mainbody .contactUsBox{width: 100%;display: inline-block;}
.contactUsBox .contactUsItem{position: relative; width: 90%; box-sizing: border-box; margin: auto; max-width: 1200px;padding-top: 30px;}
.contactUsBox .contactUsItem .usLeft{width: 49%;float:left;margin-top:30px;}
.contactUsBox .contactUsItem .usLeft p{color: #505050;line-height: 30px;}
.contactUsBox .contactUsItem .usRight{width: 49%;float:left;margin-left:2%;margin-top:30px;}
.contactUsBox .contactUsItem .usRight .img{width:100%;}
.mbottom30{margin-bottom:32px;}