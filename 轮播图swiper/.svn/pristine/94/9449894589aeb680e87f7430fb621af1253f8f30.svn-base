@charset "utf-8";
/* CSS Document */
/*公司简介界面样式*/
.mainbody{position:relative;width: 100%;}
.mainbody .bannerImg{width:100%;height:518px;}
.mainbody .companyBox{width: 100%;display: inline-block;}
.companyBox .companyNav{position: relative; width: 90%; box-sizing: border-box; margin: auto; max-width: 1200px;padding-top: 30px;}
.companyBox .companyNav .title{color: #b4b4b4; font-size: 15px;margin-bottom: 25px;}
.companyBox .companyNav .companyLeft{width: 60%;float: left;display: inline-block;padding-top: 20px;border-top: 3px solid #03c0fe;}
.companyBox .companyNav .companyLeft p{color: #5a5a5a; margin-bottom: 25px;margin-top: 20px; line-height: 25px;}
.companyBox .companyNav .companyRight{width: 38%;margin-left: 2%;float: left; display: inline-block;}
.companyBox .companyNav .companyRight img{width: 100%;}


