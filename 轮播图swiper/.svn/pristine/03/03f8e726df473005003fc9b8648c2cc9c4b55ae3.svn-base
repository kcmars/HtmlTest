@charset "utf-8";
/* CSS Document */

/*首页公共顶部样式*/
.comTop{position: relative; top: 0; height: 60px; width: 100%;background: #03c0fe;z-index: 10;}
.comTop .navCon{position: relative; width: 90%;height: 60px; padding: 15px 14px; box-sizing: border-box; margin: auto; max-width: 1200px;}
.comTop .navCon .resetWid1{width: 171px; height: 60px; position: absolute; left: 0; top: 0; padding: 15px 0 0;}
.comTop .navCon .resetWid1 .logoIcon{width:117px;}

.comTop .navCon .resetWid2{width: 66%; height: 60px;line-height: 60px; position: absolute;top: 0;margin-left: 159px;}
.comTop .navCon .resetWid2 .navUl{zoom: 1;height: 60px; overflow: hidden; margin: 0; display: inline-block;}
.comTop .navCon .resetWid2 .navUl li{ float: left;font-family: "微软雅黑"; font-size: 15px;letter-spacing: 0;text-align: center;color: #fff;cursor: pointer;}
.comTop .navCon .resetWid2 .navUl li a:hover, .menuLiActive{background-color: #ecebeb!important;color: #383838!important;}
.comTop .navCon .resetWid2 .navUl li a{color: #fff;height:60px;line-height:60px;display:block;padding:0 16px;}
.comTop .navCon .resetWid3{ height: 60px;width: 20px;position: absolute;right: 0;top: 0;padding: 20px 0 0; cursor:pointer;}

/*顶部搜索点击搜索后样式*/
.comTop .navCon .resetWid4{position: absolute;width: 36%;right: 28px;height: 44px;}
.comTop .navCon .resetWid4 .texSearch{width: 90%;text-indent: 8px;font-size: 15px;color: #3d3c3c;border: none;background-color: transparent;border-left: 1px solid #fff;margin-left: 8px;height: 24px;line-height: 24px;outline: none;vertical-align: middle;}	
input::placeholder{color: #fff;}
.comTop .navCon .resetWid4 ul{position: absolute;width: 108%;padding: 0;box-shadow: none;margin: 0; border: none; top: 100%; left: 0; background-color: #fff; border-radius: 0;color: #8b8d8e;}
.comTop .navCon .resetWid4 ul li{padding: 10px 0 10px 42px;}
.comTop .navCon .resetWid4 ul li:hover{background-color: #f0f0f0;color: #3b3c3c;}

/*顶部二级菜单样式*/
.dropdown-menu{position: absolute;width: 100%; padding: 0; box-shadow: none;margin: 0;border: none;  max-width: 130px;top: 100%;left: 92px; background-color: #ecebeb!important;display: none;border-radius: 0;}
.dropdown-menu li{ width: 100%; margin: 0; padding: 0!important;color: #383838!important;}
.dropdown-menu li a{display:block;padding:0;clear:both;color:#383838!important;text-align:center;height:54px;line-height:54px;}

/*首页公共底部样式*/
.comFooter{ background: #0a64b4; position: relative; width: 100%;height: 50px;line-height: 50px; margin-top: 0;text-align: right;}
.comFooter .pFooter{width: 90%;margin: auto;color: #fff;font-size: 14px;}

/*其他界面公共底部样式*/
.otherComFooter{width: 100%;margin-top: 60px;}
.otherComFooter .otherFooterNav{ position: relative; width: 100%; background: #0a64b4; padding: 40px 0;}
.otherComFooter .otherFooterNav div{ width: 90%; margin: auto; zoom: 1;overflow: hidden; color: #fff;max-width: 1200px;}
.otherComFooter .otherFooterNav div ul{float:left;width: 32.3%;margin-right: 1%;}
.otherComFooter .otherFooterNav div ul:last-child{margin-right:0;}
.otherComFooter .otherFooterNav div ul li{margin-bottom: 10px;}
.otherComFooter .otherFooterNav div ul li span{margin-right: 10px; width: 84px;display: inline-block;}
.otherComFooter .otherFooterNav div ul li:nth-child(1){font-size:16px;margin-bottom: 30px;}
.img1{margin-right: 10px; margin-top: 22px;}
.mb38{margin-bottom: 38px!important; font-size: 15px;}
.frindLink{float: left; margin-right: 23%; margin-top: 16px;}
.bz{font-size: 10px; margin-top: 16px;float: left;}