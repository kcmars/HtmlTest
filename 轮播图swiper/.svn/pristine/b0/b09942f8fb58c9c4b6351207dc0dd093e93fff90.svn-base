@charset "utf-8";
/* CSS Document */
/*了解健康空气界面样式*/
.mainbody{position:relative;width: 100%;}
.mainbody .bannerImg{width:100%;}

/*了解健康空气内容样式*/
.mainbody .airBox{width: 100%;display: inline-block;}
.airBox .airItem{position: relative; width: 90%; box-sizing: border-box; margin: auto; max-width: 1200px;padding-top: 30px;}
.airBox .airItem .lblTitel{color:#b4b4b4;margin-bottom: 15px;}

/*左侧了解空气内容样式*/
.airBox .airItem .Item{width:100%;display:inline-block;}
.Item .bzLeft .itemList .item{width:100%;display:inline-block;margin-bottom:15px;}
.bzLeft .itemList .item .itemLeft{width:168px;float:left;height:153px;}
.bzLeft .itemList .item .itemLeft img{width:100%;height:153px;}
.bzLeft .itemList .item .itemRight{float:left;width:78%;border: 1px solid #dcdcdc;padding: 15px 24px;}
.bzLeft .itemList .item .itemRight h4{overflow:hidden;text-overflow: ellipsis; white-space: nowrap;}
.itemRight p{line-height:25px;margin: 12px 0;height: 50px; overflow: hidden;}