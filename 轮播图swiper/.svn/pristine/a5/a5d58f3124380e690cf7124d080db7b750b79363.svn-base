@charset "utf-8";
/* CSS Document */
/*清风事件界面样式*/
.mainbody{position:relative;width: 100%;}
.mainbody .bannerImg{width:100%;}

/*清风事件内容样式*/
.mainbody .breezeBox{width: 100%;display: inline-block;}
.breezeBox .breezeItem{position: relative; width: 90%; box-sizing: border-box; margin: auto; max-width: 1200px;padding-top: 30px;}
.breezeBox .breezeItem .lblTitel{color:#b4b4b4;margin-bottom: 15px;}

.breezeBox .breezeItem .Item{width:100%;display:inline-block;}
.Item .bzLeft{width: 70%;float: left;border-top: 2px solid #b4b4b4; padding: 20px 0;}
.Item .bzLeft .itemList{display: inline-block;width: 100%; margin-bottom: 20px;}
.Item .bzLeft .itemList ul{float: left;width: 32.3%;margin-right: 1.5%;}
.Item .bzLeft .itemList ul:last-child{margin-right:0;}
.Item .bzLeft .itemList ul .imgBox{position:relative;}
.Item .bzLeft .itemList ul .infoBox{border: 1px solid #dcdcdc;padding: 20px 25px;}
.Item .bzLeft .itemList .itemPop{position: absolute; top: 0;left: 0; background-color: #03c0fe;width: 75px; height: 71px;text-align: center; color: #fff; font-size: 10px;}
.fsize36{font-size:36px;}
.infoBox .bzT1{font-size: 15px;line-height: 25px;margin-bottom: 10px;height: 50px;overflow: hidden;}
.infoBox .bzT2{font-size: 10px;line-height: 25px;margin-bottom: 10px;height: 75px;overflow: hidden;}

.Item .bzRight{width: 28%;float:left;margin-left:2%;margin-top:22px;}
.Item .bzRight .searchBox{width: 100%; border: 1px solid #dcdcdc;height: 36px;line-height: 36px;}
.Item .bzRight .searchBox input[type="text"]{width: 88%; height: 32px; line-height: 32px;text-indent: 5px; border: none;outline: none;}
.bzImg{width:100%;height: 152px;}
.bzRight .otherAdv .line{width: 48px; border: 1px solid #0a64b4; margin-top: 35px;margin-bottom: 20px;}
.bzRight .otherAdv .otherItem{width:100%;display:inline-block;margin-top: 16px;}
.bzRight .otherAdv .otherItem li{width:32.3%;float:left;margin-right:1.5%;}
.bzRight .otherAdv .otherItem li img{width:100%;}
.bzRight .otherAdv .otherItem li:last-child{margin-right:0;}

/*上下页样式*/
.pageNav .page{padding: 4px 10px;cursor: pointer;}
.pageNav .page:hover, .pageSelect{border: 1px solid #dcdcdc; border-radius: 4px; padding: 4px 10px;}
.pageNav input[type="button"]{ border: 1px solid #03c0fe; background-color: transparent; border-radius: 4px; padding: 4px 10px; font-size: 13px;margin-left: 10px;}
